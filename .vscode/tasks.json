{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DosboxTasmCurrentFile",
            "type": "shell",
            "command": "${workspaceRoot}\\ASM\\TASMit.bat",
            "args": [
                "${input:dosboxtasm}",
                "${workspaceRoot}",
                "${file}"
            ],
            "presentation": {
                "echo": true,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "dosboxtasm",
          "description": "选择如何调用dosbox和tasm",
          "options": [
            {

                "label": "在output中输出，一些程序结果无法完全显示",
                "value": "0",
            },
            {

                "label": "在dosbox中运行，需要手动退出（输入exit，点x或Ctrl+F9）",
                "value": "1",
            },
            {

                "label": "在dosbox中运行，需要手动退出（任意键退出）",
                "value": "2",
            },
            {

                "label": "在dosbox中调试，汇编链接程序并调试",
                "value": "3",
            },
            {

                "label": "在dosbox中调试，直接调试",
                "value": "4",
            },
            {

                "label": "dosbox tasm 将文件复制到TASM文件夹中，dosbox打开该TASM文件夹",
                "value": "5",
            },
            {
                "label": "dosbox here with TASM path 在当前文件所在文件夹打开dosbox",
                "value": "6",
            },
          ],
          "default": "0"
        },
    ],

}