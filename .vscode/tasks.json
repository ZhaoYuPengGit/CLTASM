{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DosboxTasmCurrentFile",
            "type": "shell",
            "windows":{
                "command": "${workspaceRoot}\\ASMtools\\ASMit.bat",
                "args": [
                    "${file}",
                    "${input:dosboxasm}",
                    "${workspaceRoot}\\ASMtools",
                    ],
            },
            "linux":{
                "command": "${workspaceRoot}/ASMtools/asmit.sh \"${file}\" -m ${input:dosboxasm} -d ${workspaceRoot}/ASMtools",
            },
            "presentation": {
                "echo": true,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "dosboxasm",
          "description": "选择如何调用dosbox和tasm/masm",
          "options": [
            {
                "label": "dosbox 将文件复制到测试文件夹中\t",
                "value": "0",
            },
            {
                "label": "TASM在output中输出，一些程序结果无法完全显示\t",
                "value": "1",
            },
            {
                "label": "TASM在dosbox中运行，需要手动退出（输入exit，点x或Ctrl+F9）\t",
                "value": "2",
            },
            {
                "label": "TASM在dosbox中运行，需要手动退出（任意键退出）\t",
                "value": "3",
            },
            {
                "label": "TASM在dosbox中调试，汇编链接程序再调试\t",
                "value": "4",
            },
            {
                "label": "MASM在output中输出，一些程序结果无法完全显示\t",
                "value": "5",
            },
            {

                "label": "MASM在dosbox中运行，需要手动退出（输入exit，点x或Ctrl+F9）\t",
                "value": "6",
            },
            {

                "label": "MASM在dosbox中运行，需要手动退出（任意键退出）\t",
                "value": "7",
            },
            {
                "label": "MASM在dosbox中调试，汇编链接程序再调试\t",
                "value": "8",
            },
            {
                "label": "TD在dosbox中调试，直接启动调试程序\t",
                "value": "A",
            },
            {
                "label": "DEBUG在dosbox中调试，直接启动调试程序\t",
                "value": "B",
            }, 
          ],
          "default": "0"
        },
        
    ],

}